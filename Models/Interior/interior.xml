    <!--airbrake grip-->
    <animation>
        <type>slider</type>
        <object-name>speedbrake-lever</object-name>
        <visible>true</visible>
        <drag-direction>vertical</drag-direction>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/engines/engine/throttle</property>
                <factor>0.05</factor>
                <min>0</min>
                <max>1</max>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>airbrake</tooltip-id>
                <label>%s</label>
                <mapping>nasal</mapping>
                <property>controls/engines/engine/throttle</property>
                <script>
                    return sprintf("Speedbrake %d%% out", 100-arg[0]*100);
                </script>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>speedbrake-lever</object-name>
        <property>controls/engines/engine/throttle</property>
        <factor>50</factor>
        <offset-deg>-50</offset-deg>
        <center>
            <x-m>-2.3377</x-m>
            <y-m>0.0</y-m>
            <z-m>-0.68</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>speedbrake-lever-2</object-name>
        <property>controls/engines/engine/throttle</property>
        <factor>1</factor>
        <interpolation>
            <entry>
                <ind>1</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>.13</dep>
            </entry>
        </interpolation>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <!--Release Cable-->
    <animation>
        <type>pick</type>
        <object-name>releasecable</object-name>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
                <binding>
                    <command>property-assign</command>
                    <property>sim/hitches/hook-open</property>
                    <value type="bool">true</value>
                </binding>
                <binding>
                    <command>property-assign</command>
                    <property>sim/hitches/aerotow/open</property>
                    <value type="bool">true</value>
                </binding>
                <binding>
                    <command>property-assign</command>
                    <property>sim/hitches/winch/open</property>
                    <value type="bool">true</value>
                </binding>
                <mod-up>
                    <binding>
                        <command>property-assign</command>
                        <property>sim/hitches/hook-open</property>
                        <value type="bool">false</value>
                    </binding>
                </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>hooks</tooltip-id>
                <label>Hooks: %s</label>
                <mapping>open-close</mapping>
                <property>sim/hitches/hook-open</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>releasecable</object-name>
        <property>sim/hitches/hook-open</property>
        <factor>0.02</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <!--stick front-->
    <animation>
        <type>rotate</type>
        <object-name>stick</object-name>
        <property>controls/flight/elevator</property>
        <factor>10</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>-2.3377</x-m>
            <y-m>0.0</y-m>
            <z-m>-0.68</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>stick</object-name>
        <property>controls/flight/aileron</property>
        <factor>10</factor>
        <offset>0</offset>
        <center>
            <x-m>-2.3377</x-m>
            <y-m>0.0</y-m>
            <z-m>-0.68</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    
    <!--Rudder pedals-->
    <animation>
        <type>translate</type>
        <object-name>pedalL</object-name>
        <property>controls/flight/rudder</property>
        <factor>0.07</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>pedalR</object-name>
        <property>controls/flight/rudder</property>
        <factor>-0.07</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    <!--Trim Handle-->
    <animation>
        <type>slider</type>
        <object-name>trimlever</object-name>
        <visible>true</visible>
        <drag-direction>horizontal</drag-direction>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-adjust</command>
                <property>controls/flight/elevator-trim</property>
                <factor>-0.05</factor>
                <min>-1</min>
                <max>1</max>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <label>Elevator Trim: %3d%%</label>
                <measure-text>Elevator Trim: 100%</measure-text>
                <tooltip-id>trim-front</tooltip-id>
                <mapping>percent</mapping>
                <property>controls/flight/elevator-trim</property>
            </binding>
        </hovered>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>trimlever</object-name>
        <property>controls/flight/elevator-trim</property>
        <factor>-30</factor>
        <offset-deg>0</offset-deg>
        <center>
            <x-m>-2.15768</x-m>
            <y-m>0.0</y-m>
            <z-m>-0.31491</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>
