    <animation>
        <type>translate</type>
    <object-name>canopyfull.int</object-name>
    <property>sim/model/door-positions/canopy/position-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 0.2 </ind><dep> 0.0 </dep></entry>
      <entry><ind> 0.4 </ind><dep> 0.7 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 0.7 </dep></entry>
    </interpolation>
        <axis>
            <y>1</y>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>canopyfull.int</object-name>
        <condition>
            <property>gear/gear[1]/wow</property>
        </condition>
        <property>sim/model/door-positions/canopy/position-norm</property>
        <interpolation>
            <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
            <entry><ind> 0.2 </ind><dep> 0.0 </dep></entry>
            <entry><ind> 0.5 </ind><dep> 0.0 </dep></entry>
            <entry><ind> 1.0 </ind><dep> -0.6 </dep></entry>
        </interpolation>
        <axis>
            <z>1</z>
        </axis>
    </animation>
    <animation>
        <type>translate</type>
        <object-name>canopyfull.int</object-name>
        <condition>
            <not>
                <property>gear/gear[1]/wow</property>
            </not>
        </condition>
        <property>sim/model/door-positions/canopy/position-norm</property>
        <interpolation>
            <entry><ind> 0.0 </ind><dep> 0.0 </dep></entry>
            <entry><ind> 0.2 </ind><dep> 0.0 </dep></entry>
            <entry><ind> 0.5 </ind><dep> 0.0 </dep></entry>
            <entry><ind> 0.6 </ind><dep> -1 </dep></entry>
            <entry><ind> 1.0 </ind><dep> -100 </dep></entry>
        </interpolation>
        <axis>
            <z>1</z>
        </axis>
    </animation>
  <animation>
      <type>select</type>
    <object-name>canopyfull.int</object-name>
    <condition>
                    <property>sim/model/canopy-visible</property>
            </condition>
  </animation>
    <!--SHADERS/EFFECTS-->
    <!--Enable/disable windows for better visibility-->
    <animation>
        <type>select</type>
        <condition>
            <property>sim/model/window</property>
        </condition>
        <object-name>window.int</object-name>
        <object-name>window.cabrio.int</object-name>
    </animation>
    <animation>
        <type>select</type>
        <condition>
            <property>sim/model/cabrio</property>
        </condition>
        <object-name>window.cabrio.int</object-name>
    </animation>
    <animation>
        <type>select</type>
        <condition><not>
            <property>sim/model/cabrio</property>
                        </not></condition>
        <object-name>window.int</object-name>
    </animation>
    <effect>
        <inherits-from>../Effects/interior-glass</inherits-from>
        <object-name>window.int</object-name>
